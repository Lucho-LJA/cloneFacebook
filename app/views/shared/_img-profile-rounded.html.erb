<div class = "<%= class_ %>" >
    <% if opt_button %>
        <%  if not current_user.avatar.present?%>
            <%= link_to image_tag(current_user.img_auth, class: "is-rounded"), boards_show_path(current_user) %>
        <% else %>
            <%= link_to image_tag(current_user.avatar.url, class: "is-rounded"), boards_show_path(current_user) %>
        <% end %>
    <% else %>
        <%  if not current_user.avatar.present?%>
            <%= image_tag(current_user.img_auth, class: "is-rounded") %>
        <% else %>
            <%= image_tag(current_user.avatar.url, class: "is-rounded") %>
        <% end %>
    <% end %>
</div>