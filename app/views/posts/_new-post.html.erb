<%= form_for(@post) do |f| %>
    <%= render "devise/shared/error_messages", resource: @post %>
    <div class="field">
        <div class="control">
            <%= f.text_area :content, autofocus: true, size: "60x5", style: "resize: none" %><br />
        </div>
    </div>
    <div class="field">
        <p>Add a image:</p>
        <div class="control">
            <%= f.text_field :img_url, class:"form-control" %>
        </div>
    </div>
    <br />
    <%= f.submit 'New Post', class:"btn btn-secondary col-md-3"%>
<% end %>