
    <%= render 'shared/img-profile-square', class_: " image  is-fullwidth is-flex", user: User.find(params[:id])  %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
        
          <div class="field">
            <%= f.label :Profile_image %><br />
            <%= f.file_field :avatar, accept: 'image/jpeg,image/gif,image/png', required: true  %>
          </div>
          
          <div class="actions">
            <%= link_to "back", boards_show_path(current_user), "data-turbo-frame": "img-profile", class: "button is-small"%>
            <%= f.submit "Update" , class: "button is-small"%>
          </div>
    <% end %>
    <script type="text/javascript">
  document.getElementById('user_avatar').addEventListener('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 0.5) {
      this.value = '';
      alert('Maximum file size is 0.5 MB. Please choose a smaller file.');
    }
  });
</script>
