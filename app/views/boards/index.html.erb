<section class="section">
  <div class="container">
    <div class="columns">
      <% if user_signed_in? %>
        <%= render 'profile' %>
      <% else %>
        <%= render 'trends' %>
      <% end %>
      
    </div>
  </div>
</section>
          <div class="row">
  <div class=" mx-auto">

    <div class="col-m6 mb-2"> <%= image_tag current_user.avatar.url if current_user.avatar? %> </div>
    <% if current_user.id == current_user.id %>
      <div class="col-m6">
        <button class= "btn btn-info text-white font-weight-bold" data-toggle="modal" data-target="#imageUploadModal">
          Upload Profile Picture
        </button>
        
 
        <h5 class="modal-title" id="imageUploadModalLabel"> Change Profile Picture </h5>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :Profile_image %><br />
            <%= f.file_field :avatar, accept: 'image/jpeg,image/gif,image/png'  %>
          </div>

          <div class="actions">
            <%= f.submit "Update" %>
          </div>
        <% end %>


<script type="text/javascript">
  document.getElementById('avatar_image').addEventListener('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 1) {
      alert('Maximum file size is 1 MB. Please choose a smaller file.');
    }
  });
</script>


      </div>
    <%end%>

  </div>
</div>

