
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
       
    <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, value: current_user.name,autocomplete: "name", required: true  %>
    </div>
    <div class="field">
        <%= f.label :username %><br />
        <%= f.text_field :username, autofocus: true, value: current_user.username,autocomplete: "username", required: true  %>
    </div>
    <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, value: current_user.email,autocomplete: "email", required: true  %>
    </div>
    <div class="actions">
        <%= link_to "back", boards_show_path(current_user), "data-turbo-frame": "info-profile", class: "button is-small"%>
        <%= f.submit "Update" , class: "button is-small"%>
    </div>
<% end %>